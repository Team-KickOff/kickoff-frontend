{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@navigation/*": ["navigation/*"],
      "@screens/*": ["screens/*"],
      "@services": ["services/*"],
      "@shared": ["shared/*"],
      "@types": ["types/*"],
      "@utils": ["utils/*"],
      "@config": ["config/*"]
    }
  }
}
